<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Ofimatica Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/1631358321127.jpeg" alt="Logo" width="40" height="40" class="me-2 rounded-circle" />
                <span>Mediateca - Ofimática</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto align-items-center">

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ResourceMvc" asp-action="Index">📚 Recursos</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserMvc" asp-action="Index">👤 Gestión Usuarios</a>
                            </li>
                        }

                        <li class="nav-item d-flex align-items-center text-white me-2">
                            Hola, <strong class="ms-1">@User.Identity.Name</strong> 👋
                        </li>

                        <li class="nav-item">
                            <form method="post" asp-controller="UserMvc" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">🚪 Salir</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light me-2" asp-controller="UserMvc" asp-action="Login">🔐 Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-success" asp-controller="UserMvc" asp-action="Register">📝 Registrarse</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>